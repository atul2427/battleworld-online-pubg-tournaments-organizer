            <TextView android:textSize="18.0sp" android:textColor="#ffffffff" android:layout_gravity="start" android:id="@+id/pName" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/player_name" android:fontFamily="@font/lato_black" />
